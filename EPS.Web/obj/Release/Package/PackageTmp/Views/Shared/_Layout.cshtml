                <div class="fm">
                    @for (int i = 0; i < list.Count; i++)
                    {
                        var url = list[i].FrontUrl;
                        if (!string.IsNullOrEmpty(url))
                        {
                            url = Url.Content(url);
                        }
                        if (i == list.Count - 1)
                        {
                            <a href="@url">@list[i].DisplayName</a>
                        }
                        else
